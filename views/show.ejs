<%- include("partials/header") %> 
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-3">
      <h1>Edit page</h1>
      <form action="/items/<%= data.item_id %>?_method=PUT" method="POST">
        <div class="mb-3">
          <label for="itemName">Item Name:</label>
          <input class="form-control" type="text" name="item[name]" id="itemName" value="<%= data.item_name %>">
        </div>

        <div class="mb-3">
          <label for="itemQty">Item Quantity:</label>
          <input class="form-control" type="number" step="1" name="item[qty]" id="itemQty" min="0" value="<%= data.item_qty %>">
        </div>

        <div class="mb-3">
          <label for="itemAmount">Item Amount:</label>
          <input class="form-control" type="number" step=".01" name="item[amount]" id="itemAmount" min="0" value="<%= data.item_amount %>">
        </div>
        <div class="mb-3 text-center">
          <button class="btn btn-lg btn-success">Submit</button><br><small><a href="/"">home</a></small>
        </div>
        
      </form>
    </div>
  </div>
</div>

<%- include("partials/footer") %> 